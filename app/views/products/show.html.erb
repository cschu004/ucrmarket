<p id="notice"><%= notice %></p>

<%= render 'products/sidebar' %>
<div class="hero-unit">
  <strong>User:</strong>
  <% if signed_in? and isadmin? %>
  <%= link_to @product.user.username, @product.user %>
  <% else %>
   <%= @product.user.username %> 
   <% end %><br>

  <strong>Title:</strong>
  <%= @product.title %> <br>

  <strong>Price:</strong>
  <%= @product.price %> <br>

  <strong>Description:</strong>
  <%= @product.description %> <br>

<% if current_user?(@product.user) %>
<td><%= link_to 'Edit', edit_product_path(@product) %></td> |
<td><%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %></td> |
<% end %>
<%= link_to 'Browse Products', products_path %>
</div>